<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введіть пароль"
        android:inputType="text"
        android:textSize="16sp"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/passwordVisibilityGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/showPasswordRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Показати"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/starPasswordRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сховати"
            android:textSize="16sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="17dp"/>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очистити поле"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/passwordOutputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введений пароль: "
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>
</LinearLayout>
